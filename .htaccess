<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteRule    ^(sitemap\.xml) - [L]
    RewriteRule    ^(robots\.txt) - [L]
    RewriteRule    ^(\.well-known/.*)$ $1 [L]
    RewriteRule    ^$    webroot/    [L]
    RewriteRule    (.*) webroot/$1    [L]
</IfModule>
